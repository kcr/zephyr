ZWGC_LIBX11 := @ZWGC_LIBX11@
X_EXTRA_LIBS := @X_EXTRA_LIBS@
TLIB := @TLIB@
REGEX_LIBS := @REGEX_LIBS@
ARES_LIBS := @ARES_LIBS@
X_LIBS := @X_LIBS@
SS_LIBS := @SS_LIBS@

LIBZEPHYR=${BUILDTOP}/lib/libzephyr.la
YFLAGS=-d

#default target
all:

dir := lib
include lib/Rules.mk

dir := server
include server/Rules.mk

dir := zhm
include zhm/Rules.mk

dir := zwgc
include zwgc/Rules.mk

dir := clients
include clients/Rules.mk

_INCLUDE := $(_INCLUDE) ${srcdir}/h/zephyr/mit-copyright.h ${srcdir}/h/zephyr/zephyr.h

include Common.mk
